<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
  <display-name>ServerComputerDatabase</display-name>
  
  <servlet>
    <servlet-name>AddComputer</servlet-name>
    <servlet-class>com.excilys.computer_database.servlets.AddComputerServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>AddComputer</servlet-name>
    <url-pattern>/addComputer</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>EditComputer</servlet-name>
    <servlet-class>com.excilys.computer_database.servlets.EditComputerServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>EditComputer</servlet-name>
    <url-pattern>/editComputer</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>Dashboard</servlet-name>
    <servlet-class>com.excilys.computer_database.servlets.DashboardServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Dashboard</servlet-name>
    <url-pattern>/dashboard</url-pattern>
  </servlet-mapping>
  
  <error-page>
    <error-code>403</error-code>
    <location>/views/403.html</location>
  </error-page>
  <error-page>
    <error-code>404</error-code>
    <location>/views/404.html</location>
  </error-page>
  
  <!-- 
  <error-page>
    <error-code>500</error-code>
    <location>/views/500.html</location>
  </error-page>
   -->
</web-app>